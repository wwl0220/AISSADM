<?xml version="1.0"?>
<config>
  <user-security-requirement>
    <requirement-name>detect-DDoS</requirement-name>
    <requirement>
      <requirement-id>1</requirement-id>
      <requirement-priority>1</requirement-priority>
      <object>
        <requirement-object>ddos</requirement-object>
      </object>
      <action>
        <requirement-action>detect</requirement-action>
      </action>
      <measurement>
        <requirement-measurement>
          <requirement-measurement-name>detection-rate</requirement-measurement-name>
          <detection-rate>90</detection-rate>
        </requirement-measurement>
        <requirement-measurement>
          <requirement-measurement-name>detection-system-response-time</requirement-measurement-name>
          <detection-system-reponse-time>60</detection-system-reponse-time>
        </requirement-measurement>
      </measurement>
    </requirement>
  </user-security-requirement>
</config>
